<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/cardview_radius_8"
    android:layout_margin="@dimen/margin_5dp"
    android:layout_marginLeft="@dimen/margin_5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/wid_hei_150"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_item_album_shop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wid_hei_150"
            android:src="@drawable/phone"/>

        <TextView
            android:id="@+id/text_name_item_album_shop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wid_hei_30"
            android:gravity="center"
            android:text="@string/smart_phone"
            android:textColor="@color/black"
            android:textSize="@dimen/common_text_size_15"/>
    </LinearLayout>

</android.support.v7.widget.CardView>